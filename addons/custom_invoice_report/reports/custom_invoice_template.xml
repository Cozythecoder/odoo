<odoo>
    <template id="custom_invoice_document">
        <t t-name="custom_invoice_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Custom Invoice</h2>
                        <p>Date: <t t-esc="o.date" /></p>
                        <p>Customer: <t t-esc="o.partner_id.name" /></p>
                        <p>Amount: <t t-esc="o.amount_total" /></p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
